@model IEnumerable<Entities.EmployeeDto>

@{
    ViewData["Title"] = "Empleados";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">
            X
        </button>
        @ViewBag.Message
    </div>
}

<h1>Empleados</h1>

@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <p>
        @using (Html.BeginForm())
        {
            <p>
                @Html.TextBox("sid") <input type="submit" value="Buscar" />
            </p>
        }
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_anual_salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile_image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_anual_salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile_image)
                </td>
                <td>
                    @Html.ActionLink("Ver empleado", "Search", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
